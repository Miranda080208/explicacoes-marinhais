<script>
  (function(){
    emailjs.init("OADbaRrYaf8WSnuwM");
  })();

  function enviar(e) {
    e.preventDefault();

    const params = {
      nome: e.target[0].value,
      email: e.target[1].value,
      telefone: e.target[2].value,
      disciplina: e.target[3].value,
      data: e.target[4].value
    };

    emailjs.send("service_q0gkelc", "template_33mpox6", params)
      .then(function() {
        alert("Explica√ß√£o marcada com sucesso. Confirma√ß√£o enviada por email.");
        e.target.reset();
      }, function(error) {
        alert("Erro ao enviar email. Tenta novamente.");
        console.log(error);
      });
  }
</script>

